<style>
  .team-grid {
    display: grid;
    grid-template-columns: repeat(8, 1fr);
    grid-template-rows: repeat(2, 1fr);
    grid-column-gap: 2rem;
    grid-row-gap: 2rem;
  }
  .team-grid :nth-child(1) {
    grid-area: 1 / 1 / 2 / 3;
  }
  .team-grid :nth-child(2) {
    grid-area: 1 / 3 / 2 / 5;
  }
  .team-grid :nth-child(3) {
    grid-area: 1 / 5 / 2 / 7;
  }
  .team-grid :nth-child(4) {
    grid-area: 1 / 7 / 2 / 9;
  }
  .team-grid :nth-child(5) {
